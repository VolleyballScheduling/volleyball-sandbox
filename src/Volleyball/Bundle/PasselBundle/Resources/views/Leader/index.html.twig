{% extends '::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/bundles/Volleyballuser/css/Base/index.css') }}" rel="stylesheet" />
    <link href="{{ asset('/bundles/Volleyballpassel/css/leader.css') }}" rel="stylesheet" />
    <link href="{{ asset('/bundles/Volleyballuser/css/Base/datatable.css') }}" rel="stylesheet" />
{% endblock %}

{% block content %}
<div class="fluid-row">
    <div class="span12">
        <h1>
            {{ 'leaders' | title }}
            {% if is_granted("ROLE_ADMIN") %}
            <a href="{{ path( 'volleyball_leader_new' ) }}" alt="{{ 'add a leader' }}">
                <i class="icon-plus on icon-check-empty pull-right"></i>
           </a>
           {% endif %}
        </h1>

        {% block datatable %}
        <table class="table table-striped">
            <thead>
                <tr>
                    {# last name #}
                    <th>
                        <a href="#" class="sort-toggle">{{ 'last name' | title }}</a>
                    </th>
                    {# last name #}
                    <th>
                        <a href="#" class="sort-toggle">{{ 'first name' | title }}</a>
                    </th>
                    {# birthdate #}
                    <th>
                        <a href="#" class="sort-toggle">{{ 'birthdate' | title }}</a>
                    </th>
                    {# passel #}
                    <th>
                        <a href="#" class="sort-toggle">{{ 'passel' | title }}</a>
                    </th>
                    {# admin #}
                    <th>
                        <a href="#" class="sort-toggle">{{ 'admin' | title }}</a>
                    </th>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                {% for leader in leaders %}
                <tr>
                    <td>
                        <a href="{{ path( 'volleyball_leader_show', { 'slug': leader.slug } ) }}">
                            {{ leader.lastname }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path( 'volleyball_leader_show', { 'slug': leader.slug } ) }}">
                            {{ leader.firstname }}
                        </a>
                    </td>
                    <td>
                        {{ leader.birthdate }}
                    </td>
                    <td>
                        <a href="{{ path( 'volleyball_passel_show', { 'slug': leader.Passel.slug } ) }}">
                            {{ leader.Passel.name | title }}
                        </a>
                    </td>
                    <td>
                        {{ leader.isAdmin }}
                    </td>
                    {% include 'VolleyballUserBundle:Datatable:datatable.controls.html.twig' with { 'slug': leader.slug, 'type': 'leader' } %}
                </tr>
                {% else %}
                <tr>
                    <td colspan="5">
                        <em>{{ 'no leaders found.' | title }}</em>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% include 'VolleyballUserBundle:Datatable:datatable.footer.html.twig' with { 'pager': pager } %}
        {% endblock %}
    </div>
</div>
{% endblock %}
