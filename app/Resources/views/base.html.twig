  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="Content-Language" content="en" />
    
    <link rel="alternate" type="application/rss+xml" href="/feed/" title="RSS" />
    <title>{% block title %}Volleyball: Scheduling for summer camps{% endblock %}</title>

    <meta name="description" content="summer camp scheduling system">
    <meta name="author" content="david durost">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block stylesheets %}
    <link href="http://fonts.googleapis.com/css?family=Oxygen" rel="stylesheet" type="text/css">
    <link href="{{ asset('/bundles/volleyballutility/css/bootstrap.css') }}" rel="stylesheet" type="text/css" media="all"/>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <link href="{{ asset('/bundles/volleyballutility/css/volleyball.css') }}" rel="stylesheet">
    {% endblock %}
    
</head>
<body>
{% block body %}
    <div class="container">
        {% block header %}
        <div class="masthead clearfix">
            <h1 class="pull-left">
                <i class="fa fa-bookmark fa fa-large"></i><br />
                <a href="{{ path( 'homepage') }}">{{ 'scheduling for summer camps' | title }}</a>
            </h1>
            {% block menu %}
                {{ knp_menu_render('main', { 'style': 'justified-pills', 'currentClass': 'active'}) }}
            {% endblock %}
        </div>
        {% endblock %}
        {% block content %}{% endblock %}
    </div>
    <div class="footer">
    {% block footer %}
        <div class="container">
            <div class="row">
                <div class="span4">
                    <h3><i class="fa fa-coffee"></i>&nbsp;Something</h3>
                    <p>Stuff goes here.</p>
                </div>
                <div class="span4">
                    <h3><i class="fa fa-sitemap"></i>&nbsp;Sitemap</h3>
                    <p></p>
                </div>
                <div class="span4">
                    <h3><i class="fa fa-envelope"></i>&nbsp;Contact</h3>
                    <p>
                        <strong>Email:</strong> <a href="">dave[at]daviddurost[dot]net</a>
                    </p>
                </div>
            </div>
        </div>
    {% endblock %}
    </div>
    {% block javascripts %}
    <script src="{{ asset('/bundles/volleyballutility/js/jquery.js') }}"></script>
    <script src="{{ asset('/bundles/volleyballutility/js/bootstrap.js') }}"></script>
    {% endblock %}
{% endblock %}
</body>
</html>
