{% extends '::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/bundles/Volleyballuser/css/Base/index.css') }}" rel="stylesheet" />
    <link href="{{ asset('/bundles/Volleyballpassel/css/level.css') }}" rel="stylesheet" />
    <link href="{{ asset('/bundles/Volleyballuser/css/Base/datatable.css') }}" rel="stylesheet" />
{% endblock %}

{% block content %}
<div class="fluid-row">
    <div class="span12">
        <h1>
            {{ 'levels' | title }}
            {% if is_granted("ROLE_ADMIN") %}
            <a href="{{ path( 'volleyball_level_new' ) }}" alt="{{ 'add a level' }}">
                <i class="icon-plus on icon-check-empty pull-right"></i>
           </a>
           {% endif %}
        </h1>

        {% block datatable %}
        <table class="table table-striped">
            <tr>
                <th>
                    <a href="#" class="sort-toggle">{{ 'name' | title }}</a>
                </th>
                <th>{{ 'description' | title }}</th>
                <th>{{ 'status' | title }}</th>
                <th>{{ 'category' | title }}</th>
                <td></td>
            </tr>
            {% for level in levels %}
            <tr>
                <td><a href="{{ path( 'volleyball_level_show', { 'slug': level.slug } ) }}">{{ level.name }}</a></td>
                <td>{{ level.shortDescription }}</td>
                <td><a href="{{ path( 'volleyball_status_show', { 'slug': level.Status.slug } ) }}">{{ level.Status.name }}</a></td>
                <td><a href="{{ path( 'volleyball_category_show', { 'slug': level.Category.slug } ) }}">{{ level.Category.name }}</a></td>
                {% include 'VolleyballUserBundle:Datatable:datatable.controls.html.twig' with { 'slug': level.slug, 'type': 'level' } %}
            </tr>
            {% else %}
            <tr>
                <td colspan="5">
                    <em>{{ 'no levels found.' | title }}</em>
                </td>
            </tr>
            {% endfor %}
        </table>
        {% include 'VolleyballUserBundle:Datatable:datatable.footer.html.twig' with { 'pager': pager } %}
        {% endblock %}
    </div>
</div>
{% endblock %}
